<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.restaurant.controller.ItemController" styleClass="content-pane">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Item Management" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" promptText="Search items..." styleClass="search-field"/>
        <ComboBox fx:id="searchByComboBox" promptText="Search By" styleClass="combo-box"/>
        <ComboBox fx:id="sortByComboBox" promptText="Sort By" styleClass="combo-box"/>
        <CheckBox fx:id="ascendingCheckBox" text="Ascending" styleClass="check-box"/>
        <Button text="Search" onAction="#handleSearch" styleClass="action-button"/>
    </HBox>

    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
        <VBox spacing="10">
            <TableView fx:id="itemTable" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID"/>
                    <TableColumn fx:id="nameColumn" text="Name"/>
                    <TableColumn fx:id="categoryColumn" text="Category"/>
                    <TableColumn fx:id="priceColumn" text="Price"/>
                </columns>
            </TableView>
        </VBox>

        <VBox spacing="10" styleClass="form-pane">
            <GridPane hgap="10" vgap="10" styleClass="form-grid">
                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="combo-box"/>

                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextArea fx:id="descriptionArea" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Preparation Time:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="preparationTimeField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Available:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <CheckBox fx:id="availableCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="check-box"/>

                <Label text="Image URL:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="imageUrlField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <Label text="Calories:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <TextField fx:id="caloriesField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <Label text="Spicy Level:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                <Slider fx:id="spicyLevelSlider" min="0" max="5" majorTickUnit="1" minorTickCount="0" snapToTicks="true" showTickLabels="true" showTickMarks="true" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="addButton" text="Add" onAction="#handleAdd" styleClass="action-button"/>
                <Button fx:id="updateButton" text="Update" onAction="#handleUpdate" styleClass="action-button"/>
                <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete" styleClass="action-button"/>
                <Button fx:id="clearButton" text="Clear" onAction="#handleClear" styleClass="action-button"/>
            </HBox>
        </VBox>
    </SplitPane>
</VBox>