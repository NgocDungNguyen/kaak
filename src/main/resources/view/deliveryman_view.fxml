<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.restaurant.controller.DeliverymanController" styleClass="content-pane">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Deliveryman Management" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" promptText="Search deliverymen..." styleClass="search-field"/>
        <ComboBox fx:id="searchByComboBox" promptText="Search By" styleClass="combo-box"/>
        <ComboBox fx:id="sortByComboBox" promptText="Sort By" styleClass="combo-box"/>
        <CheckBox fx:id="ascendingCheckBox" text="Ascending" styleClass="check-box"/>
        <Button text="Search" onAction="#handleSearch" styleClass="action-button"/>
    </HBox>

    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
        <VBox spacing="10">
            <TableView fx:id="deliverymanTable" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID"/>
                    <TableColumn fx:id="nameColumn" text="Name"/>
                    <TableColumn fx:id="phoneColumn" text="Phone"/>
                    <TableColumn fx:id="vehicleTypeColumn" text="Vehicle Type"/>
                    <TableColumn fx:id="statusColumn" text="Status"/>
                </columns>
            </TableView>
        </VBox>

        <VBox spacing="10" styleClass="form-pane">
            <GridPane hgap="10" vgap="10" styleClass="form-grid">
                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Vehicle Type:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="vehicleTypeField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="License Number:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="licenseNumberField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="combo-box"/>

                <Label text="Join Date:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <DatePicker fx:id="joinDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <Label text="Total Deliveries:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <TextField fx:id="totalDeliveriesField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <Label text="Rating:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                <TextField fx:id="ratingField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

                <Label text="Available:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
                <CheckBox fx:id="availableCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="addButton" text="Add" onAction="#handleAdd" styleClass="action-button"/>
                <Button fx:id="updateButton" text="Update" onAction="#handleUpdate" styleClass="action-button"/>
                <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete" styleClass="action-button"/>
                <Button fx:id="clearButton" text="Clear" onAction="#handleClear" styleClass="action-button"/>
            </HBox>
        </VBox>
    </SplitPane>
</VBox>