<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.restaurant.controller.OrderController" styleClass="content-pane">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Order Management" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" promptText="Search orders..." styleClass="search-field"/>
        <ComboBox fx:id="searchByComboBox" promptText="Search By" styleClass="combo-box"/>
        <ComboBox fx:id="sortByComboBox" promptText="Sort By" styleClass="combo-box"/>
        <CheckBox fx:id="ascendingCheckBox" text="Ascending" styleClass="check-box"/>
        <Button text="Search" onAction="#handleSearch" styleClass="action-button"/>
    </HBox>

    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
        <VBox spacing="10">
            <TableView fx:id="orderTable" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columns>
                    <TableColumn fx:id="orderIdColumn" text="Order ID"/>
                    <TableColumn fx:id="customerColumn" text="Customer"/>
                    <TableColumn fx:id="deliverymanColumn" text="Deliveryman"/>
                    <TableColumn fx:id="totalColumn" text="Total"/>
                    <TableColumn fx:id="statusColumn" text="Status"/>
                    <TableColumn fx:id="orderTimeColumn" text="Order Time"/>
                </columns>
            </TableView>
        </VBox>

        <VBox spacing="10" styleClass="form-pane">
            <GridPane hgap="10" vgap="10" styleClass="form-grid">
                <Label text="Customer:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="customerComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="combo-box"/>

                <Label text="Deliveryman:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <ComboBox fx:id="deliverymanComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="combo-box"/>

                <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="combo-box"/>

                <Label text="Delivery Address:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="deliveryAddressField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Special Instructions:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextArea fx:id="specialInstructionsArea" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Payment Method:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <ComboBox fx:id="paymentMethodComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="combo-box"/>
            </GridPane>

            <HBox spacing="10">
                <Label text="Add Item:"/>
                <ComboBox fx:id="itemComboBox" promptText="Select Item" styleClass="combo-box"/>
                <TextField fx:id="quantityField" promptText="Quantity" prefWidth="80"/>
                <Button fx:id="addItemButton" text="Add" onAction="#handleAddItem" styleClass="action-button"/>
            </HBox>

            <ListView fx:id="selectedItemsListView" VBox.vgrow="ALWAYS" styleClass="list-view"/>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="removeItemButton" text="Remove Item" onAction="#handleRemoveItem" styleClass="action-button"/>
                <Label fx:id="totalLabel" text="Total: $0.00" styleClass="total-label"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="createOrderButton" text="Create Order" onAction="#handleCreateOrder" styleClass="action-button"/>
                <Button fx:id="updateOrderButton" text="Update Order" onAction="#handleUpdateOrder" styleClass="action-button"/>
                <Button fx:id="deleteOrderButton" text="Delete Order" onAction="#handleDeleteOrder" styleClass="action-button"/>
                <Button fx:id="clearButton" text="Clear" onAction="#handleClear"/>
            </HBox>
        </VBox>
    </SplitPane>
</VBox>